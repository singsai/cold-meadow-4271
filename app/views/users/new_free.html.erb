<section class="content skypesignup">
    <div class="container">
        <div class="span6">
		    <%= form_for(@user, :html => { :class=>"form-horizontal" }) do |f| %>
		      <div style="class:'errorExplanation, color='#FF0000'"><%= errors_for(@user, "Oops, there was a problem").html_safe %></div>
                <div class="control-group">
			      <%= f.label :name, :class=>"control-label" %>
                    <div class="controls">
				      <%= f.text_field :name, :placeholder => "First and Last", :class => "span4" %>
                    </div>
                </div>
                <div class="control-group">
			      <%= f.label :email, :class=>"control-label" %>
                    <div class="controls">
				      <%= f.text_field :email, :class => "email span4" %>
                    </div>
                </div>
                <div class="control-group">
			      <%= f.label :skype, "Skype Handle", :class=>"control-label" %>
                    <div class="controls">
				      <%= f.text_field :skype, :class=>"skypehandle span4", :placeholder => "your username on Skype" %>
                    </div>
                </div>

                <div class="control-group">
	                <label class="control-label">Language I Need Translated</label>
	                <div class="controls">
						<%= f.select :preferred_language, [ ['Spanish'], ['Mandarin'], ['Hindi'] ], :html => {:class=>"span4 preferredlanguage"} %>
	                </div>
            	</div>
                <div class="control-group">
					<label class="control-label">How do you expect to use VerbalizeIt for Skype?</label>					
					<div class="controls">	
		                <label>
		                	<%= f.radio_button(:expected_usage, "Personal") %> Personal
						</label>
						<label>
		                	<%= f.radio_button(:expected_usage, "Business") %> Business
						</label>
						<label>
		                	<%= f.radio_button(:expected_usage, "Both") %> Both
		                </label>
					</div>
				</div>
                <div class="control-group">
                    <label class="control-label">&nbsp;</label>
                    <div class="controls">
                        <input type="submit" class="submit major" value="Sign Up">
                    </div>
                </div>
			 <% end %>	
        </div>
        <div class="span5 offset1">
            <h1 class="highlight">Try VerbalizeIt's new<br> Skype app for free.</h1>
            <br>
			
            <img src="/assets/skype-logo.png">
			<br><br>
			<h2>Already Registered?</h2> <a class='btn-medium' href='http://skype.verbalizeit.com/upgrade'><span style="margin-left:30px">Upgrade to Premium</span></a>
			<br/><br/><br/>
        </div>
		<div class="span5 offset1">
			<h2 class="highlight" style="margin-left:60px">How-it-Works</h2>
			<iframe width="300" height="168" src="http://www.youtube.com/embed/Pm-HCm0_SUc" frameborder="0" allowfullscreen></iframe>
		</div

    </div><!-- ./container -->
</section>